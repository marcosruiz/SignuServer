extends layout

block content
    h1= title
    div
        form(action='api/users/', method='post')
            input(type='hidden', name='_method', value='patch')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='email') email
                        input(id='email',type='text',value='',placeholder='Email',name='email')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='auth_code') activation code
                        input(id='auth_code',type='text',value='',placeholder='',name='activationcode')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='password') password
                        input(id='password',type='password',value='',placeholder='Password',name='password')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='password2') repeat the password
                        input(id='password2',type='password',value='',placeholder='Password',name='password2')
            div(data-role='fieldcontain')
                input(type='submit',value='Finish registration',data-transition='fade', data-theme='c')
