extends layout

block content
  h1= title
  div
    form(action='api/pdfs', method='post', enctype='multipart/form-data')
      input(type='hidden', name='_method', value='delete')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='pdf') name
            input(id='pdf',type='file',name='pdf')
      div(data-role='fieldcontain')
        input(type='submit',value='Update file',data-transition='fade', data-theme='c')
